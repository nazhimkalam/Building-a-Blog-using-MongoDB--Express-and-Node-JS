<div class="form-group">
	<label for="title">Title</label>
	<input type="text" name="title" id="title" value="<%= article.title %> " class="form-control" required />
</div>

<div class="form-group">
	<label for="description">Description</label>
	<textarea name="description" id="description" class="form-control"><%= article.description %> </textarea>
</div>

<div class="form-group">
	<label for="markdown">Markdown</label>
	<textarea name="markdown" id="markdown" required class="form-control"><%= article.markdown %> </textarea>
</div>

<a href="/" class="btn btn-danger">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
